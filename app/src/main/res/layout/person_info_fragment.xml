<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="hardcodedText"
    tools:context=".ui.person.account.PersonInfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_vertical_margin"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/welcomeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome, John Doe"
                android:fontFamily="@font/montserrat"
                android:textSize="30sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:src="@drawable/blank" />

            <com.birjuvachhani.avatarview.AvatarView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/avatar"
                android:text="John Doe"
                android:textSize="24sp"
                app:backgroundColor="@color/material_blue"
                app:border_color="@android:color/white"
                app:border_width="2dp"
                app:circleRadius="50dp"
                app:mode="COLOR" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:src="@drawable/blank" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Vaccine Status:"
                android:fontFamily="@font/montserrat"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/vaccineStatusTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unvaccinated"
                android:textColor="#FF0000"
                android:textSize="40sp"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/statusInfoTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:textSize="20sp"
                android:text="blah blah blah" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="327dp"
                android:src="@drawable/blank" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="View QR Code" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>