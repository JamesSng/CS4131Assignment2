<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_person">

    <fragment
        android:id="@+id/navigation_person"
        android:name="com.example.assignment2.ui.person.PersonFragment"
        android:label="Check In"
        tools:layout="@layout/fragment_person" >
        <action
            android:id="@+id/action_navigation_person_to_personalAccountFragment"
            app:destination="@id/personalAccountFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_admin"
        android:name="com.example.assignment2.ui.admin.AdminFragment"
        android:label="Admin"
        tools:layout="@layout/fragment_admin" />

    <fragment
        android:id="@+id/navigation_clinic"
        android:name="com.example.assignment2.ui.clinic.ClinicFragment"
        android:label="Clinic"
        tools:layout="@layout/fragment_clinic" />
    <fragment
        android:id="@+id/personalAccountFragment"
        android:name="com.example.assignment2.ui.person.PersonalAccountFragment"
        android:label="personal_account_fragment"
        tools:layout="@layout/personal_account_fragment" />
</navigation>